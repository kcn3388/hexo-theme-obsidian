<%
var keywords = '';
var description = '';
(function() {
    if (theme.keywords) {
        keywords += theme.keywords;
        keywords += ',';
    }
    if (page.keywords) {
        keywords += page.keywords;
    }
    if (config.description) {
        description += config.description;
        description += ',';
    }
    if  (is_post()) {
        description += truncate(strip_html(page.content), {length: 100, omission: ','});
    }
})();
%>
<!DOCTYPE html>
<html lang="<%= config.language %>" class="loading">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <title><%= page_title() %></title>
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="google" content="notranslate" />
    <% if (keywords) { %><meta name="keywords" content="<%= keywords %>"> <% } %>
    <% if (description) { %><meta name="description" content="<%= description %>"> <% } %>
    <% if (config.author){ %><meta name="author" content="<%= config.author %>"> <% } %>
    <% if (theme.rss){ %><link rel="alternative" href="<%- theme.rss %>" title="<%= config.title %>" type="application/atom+xml"> <% } %>
    <% if (theme.favicon){ %><link rel="icon" href="<%- url_for(theme.favicon) %>"> <% } %>
    <%- css(['https://at.alicdn.com/t/font_1429596_nzgqgvnmkjb.css'])%>
    <%- css(['https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css'])%>
    <%- css(['https://mysql.kcn3388.com/hexo-theme-obsidian/src/css/share.min.css'])%>
    <%- css(['https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.1/codemirror.min.css'])%>
    <%- css(['https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.1/theme/dracula.css'])%>
    <%- css(['css/obsidian.css'])%>
    <%- css(['https://mysql.kcn3388.com/hexo-theme-obsidian/src/css/ball-atom.min.css'])%>
    <%- theme.header_html %>
    <%- css(['https://mysql.kcn3388.com/hexo-theme-obsidian/src/css/font_bili/iconfont.css']) %>
    <%- css(['https://mysql.kcn3388.com/hexo-theme-obsidian/src/css/font_page/iconfont.css']) %>
    <%- css(['https://mysql.kcn3388.com/hexo-theme-obsidian/src/css/font_nga/iconfont.css']) %>
    <%- css(['https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/fontawesome.min.css']) %>
    <% if (theme.aplayer.enable == true) { %>
        <script>
            var musiclist = "<%- theme.aplayer.musiclist%>"
            var encrypt = "<%- theme.aplayer.data%>"
        </script>
        <!-- 引用依赖 -->
        <% if(theme.aplayer.meting) { %>
            <%- js(['https://mysql.kcn3388.com/hexo-theme-obsidian/src/js/loadaplayer.js'])%>
            <%- css(['https://mysql.kcn3388.com/hexo-theme-obsidian/src/aplayer/dist/APlayer.css'])%>
            <%- js(['https://mysql.kcn3388.com/hexo-theme-obsidian/src/aplayer/dist/APlayer.min.js', 'https://mysql.kcn3388.com/hexo-theme-obsidian/src/js/Meting.js'])%>
        <% } %>
        <% if(!theme.aplayer.meting) { %>
            <%- css(['https://mysql.kcn3388.com/hexo-theme-obsidian/src/aplayer/dist/APlayer.css'])%>
            <%- js(['https://mysql.kcn3388.com/hexo-theme-obsidian/src/aplayer/dist/APlayer.min.js'])%>
        <% } %>
    <% } %>
    
    <% if(theme.mouse.enable) { %>
    <style>
        body {
            cursor: url("<%- url_for(theme.mouse.default) %>"), default;
        }
        a:hover {
            cursor: url("<%- url_for(theme.mouse.pointer)%>"), pointer;
        }
        </style>
    <% } %>
</head>
